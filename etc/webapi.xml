<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/mundipagg/creditcard/installments" method="POST">
        <service class="MundiPagg\MundiPagg\Api\InstallmentsManagementInterface" method="getInstallments"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/customer/create" method="POST">
        <service class="MundiPagg\MundiPagg\Api\CustomerCreateManagementInterface" method="createCustomer"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/webhook" method="POST">
        <service class="MundiPagg\MundiPagg\Api\WebhookManagementInterface" method="save"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/installments/brand/:brand" method="GET">
        <service class="MundiPagg\MundiPagg\Api\InstallmentsByBrandManagementInterface" method="getInstallmentsByBrand"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/installments/brandbyamount/:brand/:amount" method="GET">
        <service class="MundiPagg\MundiPagg\Api\InstallmentsByBrandAndAmountManagementInterface" method="getInstallmentsByBrandAndAmount"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/maintenance/:params" method="GET">
        <service class="MundiPagg\MundiPagg\Api\MaintenanceInterface"
                 method="index"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Recurrence Apis -->

    <route url="/V1/mundipagg/recurrence/product/formData" method="POST">
        <service class="MundiPagg\MundiPagg\Api\ProductSubscriptionApiInterface" method="saveFormData"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/plan/product/formData" method="POST">
        <service class="MundiPagg\MundiPagg\Api\ProductPlanInterface" method="saveFormData"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/product" method="POST">
        <service class="MundiPagg\MundiPagg\Api\ProductSubscriptionApiInterface" method="save"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/product" method="GET">
        <service class="MundiPagg\MundiPagg\Api\ProductSubscriptionApiInterface" method="list"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>
    <route url="/V1/mundipagg/recurrence/product/:id" method="GET">
        <service class="MundiPagg\MundiPagg\Api\ProductSubscriptionApiInterface" method="getProductSubscription"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/product/:id" method="PUT">
        <service class="MundiPagg\MundiPagg\Api\ProductSubscriptionApiInterface" method="update"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/product/:id" method="DELETE">
        <service class="MundiPagg\MundiPagg\Api\ProductSubscriptionApiInterface" method="delete"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/subscription" method="GET">
        <service class="MundiPagg\MundiPagg\Api\SubscriptionApiInterface" method="list"/>
        <resources>
            <resource ref="Magento_Sales::sales" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/subscription/cancel/:id" method="POST">
        <service class="MundiPagg\MundiPagg\Api\SubscriptionApiInterface" method="cancel"/>
        <resources>
            <resource ref="Magento_Sales::sales" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/plan/product" method="POST">
        <service class="MundiPagg\MundiPagg\Api\ProductPlanApiInterface" method="save"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/plan/product/:id" method="PUT">
        <service class="MundiPagg\MundiPagg\Api\ProductPlanApiInterface" method="update"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/plan/product" method="GET">
        <service class="MundiPagg\MundiPagg\Api\ProductPlanApiInterface" method="list"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/plan/product/:id" method="GET">
        <service class="MundiPagg\MundiPagg\Api\ProductPlanApiInterface" method="find"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mundipagg/recurrence/plan/product/:id" method="DELETE">
        <service class="MundiPagg\MundiPagg\Api\ProductPlanApiInterface" method="delete"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>


</routes>
