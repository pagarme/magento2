<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="pagarme_debit" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20">
        <label>Debit Card</label>
        <frontend_model>Pagarme\Pagarme\Block\Adminhtml\Form\Fieldset\DebitCardFieldset</frontend_model>
        <field id="active" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
            <label>Enable this payment method</label>
            <comment />
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/pagarme_debit/active</config_path>
        </field>
        <field id="title" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
            <label>Payment label</label>
            <config_path>payment/pagarme_debit/title</config_path>
            <validate>required-entry</validate>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="soft_description" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30" translate="label comment" type="text">
            <label>Soft descriptor</label>
            <config_path>payment/pagarme_debit/soft_description</config_path>
            <comment><![CDATA[<p id='debit_soft_description_comment'>Max size: <span id='soft_description_max_size'></span>.<span id='creditcard_soft_description_counter'><span id='creditcard_soft_description_counter_current'></span> / <span id='creditcard_soft_description_counter_max_size'></span></span></p>]]></comment>
            <validate>validate-length maximum-length-13</validate>
            <frontend_model>Pagarme\Pagarme\Block\Adminhtml\Form\Field\DebitCardSoftDescriptor</frontend_model>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="sort_order" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="40" translate="label" type="text">
            <label>Payment method order</label>
            <comment />
            <config_path>payment/pagarme_debit/sort_order</config_path>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="enabled_saved_cards" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="50" translate="label" type="select">
            <label>Enable card wallet</label>
            <comment />
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/pagarme_debit/enabled_saved_cards</config_path>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
	    <field id="debittypes" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="60" translate="label" type="multiselect">
	        <label>Card brands</label>
	        <comment />
	        <source_model>Pagarme\Pagarme\Model\Source\Debittype</source_model>
	        <config_path>payment/pagarme_debit/cctypes</config_path>
            <validate>validate-select</validate>
            <depends>
                <field id="active">1</field>
            </depends>
	    </field>
    </group>
</include>
