<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">pagarme_pagarme_subscriptions_listing.pagarme_pagarme_subscriptions_listing_data_source</item>
			<item name="deps" xsi:type="string">pagarme_pagarme_subscriptions_listing.pagarme_pagarme_subscriptions_listing_data_source</item>
		</item>
		<item name="spinner" xsi:type="string">spinner_columns</item>
	</argument>

	<listingToolbar name="listing_top">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="sticky" xsi:type="boolean">true</item>
			</item>
		</argument>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters" />
		<paging name="listing_paging"/>
	</listingToolbar>

	<dataSource name="nameOfDataSource">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
			<argument name="name" xsi:type="string">pagarme_pagarme_subscriptions_listing_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">id</argument>
			<argument name="requestFieldName" xsi:type="string">id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
					<item name="update_url" xsi:type="url" path="mui/index/render"/>
					<item name="storageConfig" xsi:type="array">
						<item name="indexField" xsi:type="string">id</item>
					</item>
				</item>
			</argument>
		</argument>
	</dataSource>
	<columns name="spinner_columns">
		<column name="id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">textRange</item>
					<item name="sorting" xsi:type="string">asc</item>
					<item name="label" xsi:type="string" translate="true">ID</item>
				</item>
			</argument>
		</column>
		<column name="pagarme_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Subscription id</item>
				</item>
			</argument>
		</column>
		<column name="code">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Order id</item>
				</item>
			</argument>
		</column>
		<column name="status" class="Pagarme\Pagarme\Ui\Component\Listing\Column\Translate">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Status</item>
				</item>
			</argument>
		</column>
		<column name="payment_method" class="Pagarme\Pagarme\Ui\Component\Listing\Column\Translate">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Payment Method</item>
				</item>
			</argument>
		</column>
		<column name="customer_name" class="Pagarme\Pagarme\Ui\Component\Recurrence\Column\CustomerName">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="editor" xsi:type="array">
						<item name="editorType" xsi:type="string">text</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
						</item>
					</item>
					<item name="label" xsi:type="string" translate="true">Customer name</item>
				</item>
			</argument>
		</column>
		<column name="interval" class="Pagarme\Pagarme\Ui\Component\Recurrence\Column\Interval">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="editor" xsi:type="array">
						<item name="editorType" xsi:type="string">text</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
						</item>
					</item>
					<item name="label" xsi:type="string" translate="true">Interval</item>
				</item>
			</argument>
		</column>
		<column name="created_at" class="Pagarme\Pagarme\Ui\Component\Recurrence\Column\CreatedAt">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="editor" xsi:type="array">
						<item name="editorType" xsi:type="string">text</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
						</item>
					</item>
					<item name="label" xsi:type="string" translate="true">Subscription created at</item>
				</item>
			</argument>
		</column>
		<column name="total_cycles_by_product" class="Pagarme\Pagarme\Ui\Component\Recurrence\Column\TotalCyclesByProduct">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="editor" xsi:type="array">
						<item name="editorType" xsi:type="string">text</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
						</item>
					</item>
					<item name="label" xsi:type="string" translate="true">Total cycle counting of a product</item>
				</item>
			</argument>
		</column>
		<actionsColumn name="actions" class="Pagarme\Pagarme\Ui\Component\Column\Subscriptions\Actions">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="indexField" xsi:type="string">id</item>
				</item>
			</argument>
		</actionsColumn>
	</columns>
</listing>
